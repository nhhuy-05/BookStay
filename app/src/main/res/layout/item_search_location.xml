<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_districtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hoan Kiem"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_district"
        app:layout_constraintTop_toTopOf="@+id/img_district" />

    <ImageView
        android:id="@+id/img_district"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_vietnam"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoan Kiem is a district of Hanoi."
        app:layout_constraintBottom_toBottomOf="@+id/img_district"
        app:layout_constraintStart_toStartOf="@+id/tv_districtName" />
</androidx.constraintlayout.widget.ConstraintLayout>